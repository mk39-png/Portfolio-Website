import myProfileImg from '../assets/pfp_alpha_1920x1920.png';
---
<header>
    <nav>
        <h1>mk39-png's Portfolio</h1>

        <!-- Navigation component... placed in header because there really isn't that much else to the header. -->
        <div class="nav-links">
            <!-- <section> -->
            <!-- mk39-png's Portfolio -->
            <a href="/">Home</a>
            <a href="/blog">Projects</a>
            <a class="button" href="https://github.com/mk39-png">Github</a>

            
            <!-- <a href="/about">About</a> -->
            <!-- </section> -->
        </div>
    </nav>
</header>


<style>
    header {
        /* Inline Block so that the items can be centered and take up the width 
            of the parent box */
        display: inline-block;

        /* https://stackoverflow.com/questions/48535585/what-is-difference-between-justify-self-justify-items-and-justify-content-in-cs
        /* 'justify-self' aligns block containers within parent! */
        justify-items: center;

        width: 100%;

		background-color: #5197a1;
        border-radius: inherit;

        /* NOTE: Below are not required. */
        /* display: inline-flex; */
        /* flex-direction: column; */
		/* flex-wrap: wrap; */

        /* height: fit-content; */
        /* max-width: 50lvw; */
        /* width: 50vh; */
        /* width: fit-content; */
        /* height: auto; */
        /* margin: 0; */
        /* padding: 0; */
        /* box-sizing: border-box; */
    }

    h1 {
        font-size: 48px;

        /* To reduce the gap between the bottom of the header and the navlinks */
        margin-bottom: 0.25em;

        /* NOTE: Below are not required. */
        /* margin-top: 0.25em; */
		/* background-color: #5197a1; */
        /* padding: 0px 12px; */
    }

    h2 {
        /* margin: 0 0 1em; */
        font-weight: normal;
        color: #111827;
        font-size: 20px;
    }


    .nav-links {
        /* Flex since navlinks are side-by-side */
        display: flex;

        /* Center so that navlinks are aligned with h1 header text */
        justify-content: center;

        margin: 4%;
        gap: 16px;

        /* NOTE: Below are not required. */
        /* display: unset; */
        /* width: auto; */
        /* left: 48; */
        /* background: none; */
        /* max-height: fit-content; */
        /* max-width: max-content; */
        /* flex-wrap: wrap; */
        /* background: local; */
        /* background-color: #839ed3; */
    }

    .nav-links a {
        /* display: inline-block; */
        /* display: flex; */

        color: #111827;
        text-decoration: none;
        font-size: 1.2rem;
        font-weight: bold;
        text-transform: uppercase;

        transition: color 0.2s;
        padding: 10px 12px;
    }

    /* Text highlighting/background for when the user hovers over a link */
    .nav-links a:hover,
    .nav-links a:focus {
        background-color: #ff9776;
        color: rgb(78, 80, 86);
        border-radius: 10px;
    }

    /* Special button used by the Github links... */
    .nav-links a.button {
        color: white;
        background: linear-gradient(83.21deg, #3245ff 0%, #bc52ee 100%);
        box-shadow:
            inset 0 0 0 1px rgba(255, 255, 255, 0.12),
            inset 0 -2px 0 rgba(0, 0, 0, 0.24);
        border-radius: 10px;
    }

    .nav-links a.button:hover {
        color: rgb(230, 230, 230);
        box-shadow: none;
    }


    @media screen and (max-width: 768px) {
        .navlinks {
            /* flex-wrap: wrap; */
        }

        .navlinks a.button {
            /* padding: 14px 18px; */
        }
    }
</style>