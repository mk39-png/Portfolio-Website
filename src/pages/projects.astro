---
import Layout from '../layouts/Layout.astro';
import groovifierImg from '../assets/groovifier_v1.png';
import niceDataVisualImg from '../assets/nice_data_visualizer.png';
import '../styles/global.css'
---
<Layout>
    <main>
        <h1>PROJECTS</h1>

        <!-- NOTE: there probably is a neater way than having class nested within class, but this works -->
        <div class="project"> 
            <a class='project' href="https://github.com/mk39-png/Groovifier">
                <div class="project-img">
                    <img src={groovifierImg.src} height="140" alt="Groovifier" />
                </div>
                <div class="project-name">
                    <h2>Groovifier | 2024</h2>
                </div>
                <div class="project-description">
                    three.js port of my computer graphics final project.
                </div>
            </a>
        </div>

        <div class="project"> 
            <a class="project" href="https://github.com/mk39-png/Pleasant-Data-Visualization">
                <div class="project-img">
                    <img src={niceDataVisualImg.src} height="140" alt="Data Visualizer" />
                </div>
                <div class="project-name">
                    <h2>Nice Data Visualizer | 2023</h2>
                </div>
                <div class="project-description">
                    Generate timeline images based on inputted .csv files.
                </div>
            </a>
        </div>

	</main>
</Layout>


<style>
    /* TODO: Use grids for each entry! */
    main {
		padding: 16px;
		font-size: large;
		display: inline-block;
	}

    img {
		border-radius: 16px;
    }

    h2 {
        margin-top: 0.01em;
        margin-bottom: 0.01em;
    }


    /* https://developer.mozilla.org/en-US/docs/Web/CSS/CSS_grid_layout */
    .project {
        margin-top: 16px;
        display: grid;
        grid-template-columns:max-content  repeat(3, 1fr);
        grid-template-columns: max-content;
        grid-template-rows: auto;

        border: 16px;
        
        gap: 16px;
        grid-auto-rows: minmax(100px, auto);

        text-decoration: none;
        /* font-weight: bold; */
        color: var(--night);

        border-radius: 16px;
    }


    /* Fancy highlight when user hovers cursor over link */
    .project a {
        font-size: 1.2rem;
        /* text-transform: uppercase; */

        transition: color 0.2s;
        padding: 16px 16px;
    }

    /* Text highlighting/background for when the user hovers over a link */
    .project a:hover,
    .project a:focus {
        background-color: var(--french-gray);
        color: var(--charcoal);
        border-radius: 16px;
    }


    .project-img {
        grid-column: 1;
        grid-row: 1/3;
        align-content: center;
        padding-left: 8px;
    }

    .project-name {
        grid-column: 2;
        grid-row: 1;
    }

    .project-description {
        grid-column: 2;
        grid-row: 2;

        /* TODO: Implement text overflow wrapping */
        display: flex;
        flex-wrap: wrap;
        word-wrap: break-word;
        word-break: break-all;
    }
</style>